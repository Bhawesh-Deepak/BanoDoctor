@model IEnumerable<BanoDoctor.Admin.UI.Domains.BlogDetails>


<section class="main utility noRequired">
    <nav>
        <div class="top-nav">
            <div class="top-left">
                <ul>
                    <li class="new">Blog Details </li>
                </ul>
            </div>

            <a data-ref="10" class="btn btn-default addBtnTop" onclick="userDetail.fn_AddUser()">Blog Details</a>

        </div>
    </nav>
    <div class="row">
        <div class="col-xs-12">
            <div class="form-block marB10">
                <div class="" id="divUserSearch">
                    <div class="inner-body noButton">
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="search-fieldset toggleFields border0" id="dvSearch">

                                </div>
                            </div>

                            <div class="row">
                                <div class="row">
                                    <table id="CmsTableReport" class="table table-striped table-bordered responsive" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th>Heading</th>
                                                <th>Blog Details</th>
                                                <th>Created By</th>
                                                <th>Is Published</th>
                                                <th>CreatedDate</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var data in Model)
                                            {
                                                <tr>
                                                    <td>@data.Heading</td>
                                                    <td>@Html.Raw(data.BlogDescription)</td>
                                                    <td>@data.CreatedBy</td>
                                                    <td>@data.Ispublished</td>
                                                    <td>@data.CreatedDate</td>
                                                    <td>
                                                        <button onclick="DeleteRecords(@data.Id)">
                                                            <i class="fa fa-trash"></i>
                                                        </button>

                                                        <a asp-action="CreateEmployee" asp-controller="Employee" asp-route-id="@data.Id">
                                                            <i class="fa fa-pencil"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $(document).ready(function () {
        $('#CmsTableReport').DataTable();
    });


</script>