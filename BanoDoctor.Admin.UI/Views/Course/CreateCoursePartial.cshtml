@model BanoDoctor.Admin.UI.Domains.CourseDetail

<div id="divCreateUserPartial">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="pull-right marT2i marR20 c-red">* Required Field</div>
        <h4 class="modal-title">Create Course Details</h4>
        @*@if (Model.Id == 0)
        {
            <h4 class="modal-title">Add User Details</h4>
        }
        else
        {
            <h4 class="modal-title">Edit User Details</h4>
        }*@

    </div>
    <form asp-controller="Course" asp-action="PostCourse" method="post" data-ajax="true" data-ajax-method="post" 
          data-ajax-success="commanAjax.AjaxSuccess" data-ajax-begin="commanAjax.Fn_AjaxBegin('divCreateUserPartial')"
          data-ajax-complete="commanAjax.Fn_AjaxComplete('divCreateUserPartial')">
        <div class="modal-body">

            <div class="row">
                <div class="col-xs-3 form-group">
                    <input type="hidden" asp-for="Id" />
                    <label class="control-label"><em>* </em>Course Name</label>
                    <input asp-for="CourseName" class="form-control" autocomplete="off" />
                </div>
                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Category Name</label>
                    <input asp-for="CategoryName" class="form-control" />
                </div>
                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em> Course Detail</label>
                    <input asp-for="Detail" class="form-control" />
                </div>
                
            </div>

        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-default" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>