@model BanoDoctor.Admin.UI.Domains.UserModel
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<div id="divCreateUserPartial">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <div class="pull-right marT2i marR20 c-red">* Required Field</div>
        <h4 class="modal-title">Add User Details</h4>
        @*@if (Model.Id == 0)
        {
            <h4 class="modal-title">Add User Details</h4>
        }
        else
        {
            <h4 class="modal-title">Edit User Details</h4>
        }*@

    </div>
    <form asp-controller="UserDetail" asp-action="CreateUserPost" method="post" data-ajax="true" data-ajax-method="post"
          data-ajax-success="commanAjax.AjaxSuccess" data-ajax-begin="commanAjax.Fn_AjaxBegin('divCreateUserPartial')"
          data-ajax-complete="commanAjax.Fn_AjaxComplete('divCreateUserPartial')">
        <div class="modal-body">

            <div class="row">
                <div class="col-xs-3 form-group">
                    <input type="hidden" asp-for="Id" />
                    <label class="control-label"><em>* </em>Employee Name</label>
                    <input asp-for="EmployeeName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="EmployeeName"></span>
                </div>
                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Employee Code</label>
                    <input asp-for="EmployeeCode" class="form-control" />
                    <span asp-validation-for="EmployeeCode"></span>
                </div>

                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Employee Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email"></span>
                </div>

                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Phone#</label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone"></span>
                </div>

                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Role</label>
                    <input asp-for="Designation" class="form-control" />
                    <span asp-validation-for="Designation"></span>
                </div>


                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>User Name</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName"></span>
                </div>

                <div class="col-xs-3 form-group">
                    <label class="control-label"><em>* </em>Password</label>
                    <input asp-for="Password" class="form-control" value="@Model.Password" />
                    <span asp-validation-for="Password"></span>
                </div>
                @*<div class="col-xs-3 form-group">
                        <label class="control-label"><em>* </em> Course Detail</label>
                        <input asp-for="Detail" class="form-control" />
                    </div>*@

            </div>

        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-default" />
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </form>
</div>